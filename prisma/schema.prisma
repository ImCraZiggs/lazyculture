datasource db {
    provider          = "postgresql"
    url               = env("DATABASE_URL")
    directUrl         = env("DIRECT_URL")
    shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id         String             @id
    name       String
    slug       String
    createDate DateTime
    updateDate DateTime
    Response   QuestionResponse[]
}

model Question {
    id         Int                @id @default(autoincrement())
    difficulty Int
    data       Json?
    source     String
    language   String
    createDate DateTime
    updateDate DateTime
    userCreate String
    userUpdate String
    Response   QuestionResponse[]
}

model QuestionResponse {
    id         Int      @id @default(autoincrement())
    userId     String
    user       User     @relation(fields: [userId], references: [id])
    questionId Int
    question   Question @relation(fields: [questionId], references: [id])
    success    Boolean
    date       DateTime
}

model QuestionTheme {
    id         Int      @id @default(autoincrement())
    name       String
    slug       String
    createDate DateTime
    updateDate DateTime
    userCreate String
    userUpdate String
}
